@model MichiBlog.WebApp.ViewModels.ResetPassword

@{
    ViewData["Title"] = "Reset Password";
    ViewData["ActivePage"] = "Users";
}
<div class="container-fluid">
    <a class="btn bg-primary text-white" asp-action="Index" asp-controller="User">Go Back</a>
    <div class="card">
        <div class="card-header bg-primary">
            <h4 class="card-title text-white">Reset Password</h4>
        </div>
        <div class="card-body">
            <input type="hidden" asp-for="Id"/>
            <form asp-action="ResetPassword" asp-controller="User" asp-area="Admin" method="post">
                <div class="mb-2">
                    <label>Username</label>
                    <input asp-for="UserName" type="text" class="form-control" placeholder="@Model.UserName" disabled>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label>New Password</label>
                    <input asp-for="NewPassword" type="password" class="form-control">
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label>Confirm Password</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <button type="submit" class="btn btn-primary w-100">Reset Password</button>
                </div>
            </form>
        </div>
    </div>
</div>
